<?xml version='1.0' encoding='utf-8'?>
<widget id="org.iot.dsa" version="0.0.1" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DSA</name>
    <description>
        DSLink for Cordova Mobile
    </description>
    <author email="k.endfinger@gmail.com" href="http://iot-dsa.org">
        Kenneth Endfinger (DGLogik Inc.)
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <gap:config-file platform="ios" parent="NSAppTransportSecurity" mode="add">
      <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
      </dict>
    </gap:config-file>
    <plugin name="cordova-plugin-barcodescanner" spec="^0.7.0"/>
    <plugin name="cordova-plugin-device" spec="^1.0.1"/>
    <plugin name="cordova-plugin-geolocation" spec="^1.0.1"/>
</widget>
